#Thanks @micahjsmith & @pearlzli
[alias]
    br = branch
    ch = checkout
    co = commit
    dt = difftool
    d  = difftool -g
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=short
    gr = grep
    st = status
[color]
    branch = true
    diff   = true
    status = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    # vim will otherwise fail on filenames starting with a '+'
    cmd = vimdiff -- $LOCAL $REMOTE
[merge]
    tool = meld
[mergetool]
    prompt = false
[branch]
    autosetuprebase = always
[push]
    default = tracking
[core]
    #warn on whitespace issues
    whitespace = trailing-space,space-before-tab
[apply]
    #fix whitespace issues in patches
    whitespace = fix
[url "https://"]
    insteadof = git://
    pushInsteadOf = git://
[pull]
	rebase = true
